# Sample Agents Dockerfile
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY sample-agents/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy sample agents source code
COPY sample-agents/ .

# Make the script executable
RUN chmod +x run_all_agents.py

# Expose ports for all agents
EXPOSE 5051 5052 5053

# Health check by checking if processes are running
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD pgrep -f "agent.py" > /dev/null || exit 1

# Run all agents
CMD ["python", "run_all_agents.py"]

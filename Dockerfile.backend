# Backend Dockerfile
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY backend/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend source code
COPY backend/ .

# Create .env.example for reference
RUN echo "COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/" > .env.example && \
    echo "COSMOS_KEY=your-primary-key-here" >> .env.example && \
    echo "COSMOS_DATABASE_NAME=agent-catalog" >> .env.example && \
    echo "COSMOS_AGENTS_CONTAINER=agents" >> .env.example && \
    echo "COSMOS_CONFIG_CONTAINER=configuration" >> .env.example

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/agents || exit 1

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
